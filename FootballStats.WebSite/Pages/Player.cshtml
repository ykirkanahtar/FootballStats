@page
@model PlayerModel
@{
    ViewData["Title"] = "Oyuncular";
}
<div class="row-fluid">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <br />
    </div>
</div>

<div class="row-fluid">
    <div class="col-md-12">
        <div class="table-responsive">

            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Ad-Soyad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in Model.PlayerList)
                    {
                        <tr>
                            <td><a asp-page="PlayerDetail" asp-route-id="@player.Id">@player.Name  @player.Surname</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


